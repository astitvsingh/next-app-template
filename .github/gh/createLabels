# USAGE:
# This script creates all predefined labels in the GitHub repository.
#
# Run this script with:
# bash ./.github/gh/createLabels
#
# Prerequisites:
# - Ensure GitHub CLI (`gh`) is installed and authenticated.
# - You must have admin access to the repository.
# - The script should be executed from the repository root directory.

# Ensure the script exits on errors
set -e

# Function to create a label
create_label() {
    local name="$1"
    local description="$2"
    local color="$3"
    
    echo -e "\nğŸ·ï¸  Creating label: $name"
    
    if gh label create "$name" --description "$description" --color "$color" --force; then
        echo -e "âœ…  Label '$name' created successfully"
    else
        echo -e "âŒ  Failed to create label '$name'"
        return 1
    fi
}

echo -e "\nğŸš€ Starting label creation process...\n"

# Create Bug Report Label
create_label "ğŸ Bug Report" "Issue Label: Report a bug or unexpected behavior. TITLE=\"[ğŸ BUG REPORT]: \`<title>\`\"" "d73a4a"

# Create Documentation Label
create_label "ğŸ“š Documentation" "General Label: Improvements or additions to documentation." "0075ca"

